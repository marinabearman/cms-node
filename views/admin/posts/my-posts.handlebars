<h1>All Posts</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>File Uploaded</th>
            <th>Title</th>
            <th>Status</th>
            <th>Category</th>
            <th>Allow Comments</th>
            <th>Date</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}

        <tr>
            <td>{{id}}</td>
            <td>
                <img src="/uploads/{{file}}" class="img-responsive img-thumbnail">
            </td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{category.name}}</td>
            <td>{{allowComments}}</td>
            <td><a href="/post/{{slug}}">View</a></td>
            <td>
                {{generateDate date 'MM-DD-YYYY'}}
                <p>{{generateDate date 'h:mm a'}}</p>
            </td>
            <td>
                <a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a>
            </td>
            <td>
                <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-danger">DELETE</button>


                </form>
            </td>

        </tr>

        {{/each}}
    </tbody>

</table>