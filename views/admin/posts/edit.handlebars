<h1>Edit Posts</h1>
<form action="/admin/posts/edit/{{post.id}}?_method=PUT" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" id="title" value="{{post.title}}">
    </div>
    <div class="form-group">
        <label for="file">File Upload</label>
        <input type="file" id="fileUpload" name="fileUpload" class="form-control">
    </div>


      <div class="form-group">
        <label for="status">Category</label>
        <select name="category" id="status" class="form-control">


            {{#select post.category}}

                 {{#each categories}}

                <option value="{{id}}">{{name}}</option>

                {{/each}}

            {{/select}}

        </select>
    </div>
    <div class="form-group">
        <label for="title">Status</label>
        <select name="status" id="status" class="form-control">
            {{#select post.status}}
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
            {{/select}}
        </select>
    </div>

    <div class="form-check">
        <label for="allowComments" class="form-check-label">
            <input id="allowComments" name="allowComments" type="checkbox" class="form-check-input" {{#if post.allowComments}}checked="checked"
                aria-checked="true" {{/if}}> Allow Comments
        </label>
    </div>
    <div class="form-group">
        <label for="body">Description</label>
        <textarea id="body" name="body" cols="30" rows="10" class="form-control">{{post.body}}</textarea>
    </div>
    <button class="btn btn-default" onclick="cancelPost()">Cancel</button>
    <button type="submit" class="btn btn-primary">Update Post</button>
</form>