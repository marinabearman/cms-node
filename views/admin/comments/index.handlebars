<h1>Comments</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Owner</th>
            <th>Status</th>
            <th scope="col">Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each comments}}
        <tr>
            <th>{{id}}</th>
            <td>{{user.firstName}} {{user.lastName}}</td>
            <td>
                <input data-id="{{id}}" type="checkbox" name="approveComment" {{#if approveComment}} checked {{/if}}></td>
            <td>
                {{generateDate date 'MM-DD-YYYY'}}
                <p>{{generateDate date 'h:mm a'}}</p>
            </td>
            <td>
                <form action="/admin/comments/{{id}}?_method=DELETE" method="post">

                    <button class="btn btn-danger">Delete</button>



                </form>
            </td>
        </tr>
        {{/each}}

    </tbody>
</table>